<% @lessons.each do |lesson| %>
  <h2><%= lesson.discipline %></h2>
  <p><%= lesson.user.email %></p>
  <p><%= link_to 'Show', lesson %></p>
  <p><%= link_to 'Edit', edit_lesson_path(lesson) %></p>
  <p><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <hr>
<% end %>

<%= link_to "Criar nova ata", new_lesson_path, class: 'btn btn-primary' %>